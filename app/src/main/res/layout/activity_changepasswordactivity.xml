<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGoldenrodYellow"
    tools:context=".changepasswordactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textviewupdate_password"
                android:layout_marginTop="30dp"
                android:text="You can change your Password here."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textAllCaps="true"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Current Password *"
                android:textStyle="bold"
                android:layout_below="@id/textviewupdate_password"
                android:layout_marginTop="30dp"
                android:padding="6dp"
                android:textSize="16sp"
                android:textColor="#555555"
                android:id="@+id/Currentpassworddirectory"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_below="@id/Currentpassworddirectory"
                android:hint="  Enter your old password"
                android:inputType="textPassword"
                android:id="@+id/enteroldpassword"
                android:padding="6dp"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" New Password *"
                android:textStyle="bold"
                android:layout_below="@id/authenticate"
                android:layout_marginTop="30dp"
                android:padding="6dp"
                android:textSize="16sp"
                android:textColor="#555555"
                android:id="@+id/newpasswordtext"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTHENTICATE"
                android:layout_below="@id/enteroldpassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:id="@+id/authenticate"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_below="@id/newpasswordtext"
                android:hint="  Set new password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:textSize="16sp"
                android:id="@+id/newpasswordedittext"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Confirm New Password *"
                android:textStyle="bold"
                android:layout_below="@id/newpasswordedittext"
                android:layout_marginTop="30dp"
                android:padding="6dp"
                android:textSize="16sp"
                android:textColor="#555555"
                android:id="@+id/confirmnewpassword"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_below="@id/confirmnewpassword"

                android:hint=" Confirm  new password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:textSize="16sp"
                android:id="@+id/confirmnewpasswordtextedit"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE PASSWORD"
                android:layout_below="@id/confirmnewpasswordtextedit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:id="@+id/updatepasswordbuttonfinalcall"
                />


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressbarforchangepassword"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>





        </RelativeLayout>

    </LinearLayout>


</ScrollView>