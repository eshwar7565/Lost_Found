<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cornsilk"
    tools:context=".LostFoundmainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="85dp"
            android:layout_height="192dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/postforlost"
            android:cropToPadding="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:id="@+id/postforlost"
            android:text="POST FOR LOST"
            android:backgroundTint="@color/MainActivity"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:id="@+id/postforfound"
            android:text="POST FOR FOUND"
            android:backgroundTint="@color/MainActivity"
            />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="192dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="63dp"
            android:layout_toLeftOf="@+id/checkforlost"
            android:cropToPadding="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow" />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="192dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="135dp"
            android:layout_toLeftOf="@+id/checkforlost"
            android:cropToPadding="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow" />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="192dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="205dp"
            android:layout_toLeftOf="@+id/checkforlost"
            android:cropToPadding="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow" />
        <ImageView
            android:layout_width="85dp"
            android:layout_height="192dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="275dp"
            android:layout_toLeftOf="@+id/checkforlost"
            android:cropToPadding="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow" />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:id="@+id/checkforlost"
            android:backgroundTint="@color/MainActivity"
            android:text="CHECK FOR LOST"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:id="@+id/checkforfound"
            android:backgroundTint="@color/MainActivity"

            android:text="CHECK FOR FOUND"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:id="@+id/openposts"
            android:text="MY POSTS"
            android:backgroundTint="@color/MainActivity"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="630dp"
            android:text="UPDATE PASSWORD"
            android:id="@+id/updateorchangepassword"
            android:backgroundTint="@color/MainActivity"
            />


    </RelativeLayout>



</ScrollView>