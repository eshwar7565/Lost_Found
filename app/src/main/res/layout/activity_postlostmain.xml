<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postlostmain"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="850dp"

        android:layout_margin="25dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lost Something.Please let us know what you have lost and where."
            android:id="@+id/Welcomemessagetuser"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message*  : "
            android:id="@+id/view_message_post_for_lost"
            android:layout_below="@id/Welcomemessagetuser"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/view_message_post_for_lost"
            android:background="@drawable/border"
            android:id="@+id/edit_message_post_for_lost"
            android:hint="Message to convey"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_message_post_for_lost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="ADD IMAGE"
            android:backgroundTint="@color/newcolor2"
            android:id="@+id/addimagebuttonlost"
            />
        <ImageSwitcher
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/addimagebuttonlost"
            android:id="@+id/imageswitcherpostlost"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.81"/>








        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_below="@id/addimagebuttonlost"
            android:layout_marginTop="430dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/newcolor2"
            android:id="@+id/submitlost"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/progressbarforpostinglostitems"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_message_post_for_lost"
            android:layout_marginTop="34dp"
            android:layout_marginRight="27dp"
            android:layout_toLeftOf="@id/addimagebuttonlost"
            android:padding="6dp"
            android:src="@drawable/ic_gallery_new" />


    </RelativeLayout>



</ScrollView>